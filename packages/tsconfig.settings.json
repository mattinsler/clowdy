{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@clowdy/*": ["*/src"]
    },

    "composite": true,

    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "lib": ["es6", "es2017.object"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2015"
  }
}
